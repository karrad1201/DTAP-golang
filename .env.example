# =============================================
# DTAP - Dual Token Auth Protocol
# Environment Configuration Example
# =============================================

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_change_in_production_2024

# Redis Configuration
REDIS_URL=redis-server:6379
REDIS_PASSWORD=your_secure_redis_password_123

# Database Configuration
SQLITE_PATH=/app/data/gjwt_data.db

# Server Configuration
SERVER_PORT=3000

# Token TTL Configuration
GJWT_TTL=720h
IP_CHECK_TTL=10m
REISSUE_IP_TTL=1h
SYNC_INTERVAL=5m

# Optional: Application Settings
APP_ENV=production
APP_NAME=DTAP-Service
LOG_LEVEL=info